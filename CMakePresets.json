{
    "version": 4,
    "configurePresets": [
        {
            "name": "Debug",
            "displayName": "Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "toolchainFile": "${sourceDir}/dependencies/build/Debug/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "Release Linux",
            "inherits": "Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/deploy/linux/usr",
            "toolchainFile": "${sourceDir}/dependencies/build/Release/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Release Windows",
            "inherits": "Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/deploy/windows",
            "toolchainFile": "${sourceDir}/dependencies/build/Release/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "ASan",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_LINKER_FLAGS": "-fsanitize=address"
            }
        }
    ]
}